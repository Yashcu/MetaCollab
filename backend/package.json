{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for MetaCollab Hub - Node.js, Express, TypeScript, MongoDB",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "prod": "pm2 start dist/server.js -i max --name MetaCollab-API",
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts",
    "test": "jest --detectOpenHandles --forceExit",
    "prepare": "npm run build"
  },
  "author": "MetaCollab Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.0",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "pm2": "^6.0.10",
    "socket.io": "^4.8.1",
    "xss-clean": "^0.1.4",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^5.2.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.17.20",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.6.3",
    "@types/passport": "^1.0.12",
    "@types/passport-github2": "^1.2.5",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.49.0",
    "jest": "^30.1.3",
    "rimraf": "^5.0.1",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
